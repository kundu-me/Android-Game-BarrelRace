<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utdallas.nxkundu.barrelracegame">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HelpActivity" android:label="@string/app_help"
            android:screenOrientation="portrait"/>
        <activity android:name=".SettingsActivity"  android:label="@string/app_settings"
            android:screenOrientation="portrait"/>
        <activity android:name=".ScoreActivity" android:label="@string/app_scores"
            android:screenOrientation="portrait"/>
        <activity android:name=".SuccessActivity" android:label="@string/app_success"
            android:screenOrientation="portrait"/>
    </application>

</manifest>